
@{
    ViewData["Title"] = "Index";
}

<h1>Product</h1>

<a href="/Product/Create">Create</a>
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product item in ViewData["productList"] as List<Product>)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>
                <a href="/Product/Edit/@item.Id">Edit</a> |
                <a href="/Product/Delete/@item.Id">Delete</a> |
                <a href="/Product/Detail/@item.Id">Detail</a> |
            </td>
        </tr>
        }
    </tbody>
</table>